<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="MyTheme.Base">
  </style>
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="android:colorPressedHighlight">@color/accent</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="windowActionModeOverlay">True</item>
    <item name="buttonStyle">@style/MyButton</item>
    <item name="android:colorActivatedHighlight">@android:color/transparent</item>
  </style>
  <style name="MyButton" parent="Widget.AppCompat.Button">
    <item name="android:textAllCaps">false</item>
  </style>
  <style name="AppStyle.Light" parent="android:style/Theme.Material.Light.DarkActionBar">
    <item name="android:colorPressedHighlight">@color/accent</item>
    <item name="android:colorLongPressedHighlight">@color/primaryDark</item>
    <item name="android:colorFocusedHighlight">@color/accent</item>
    <item name="android:colorActivatedHighlight">@color/accent</item>
    <item name="android:activatedBackgroundIndicator">@color/accent</item>
  </style>
</resources>